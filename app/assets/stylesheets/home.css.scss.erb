div.next_icon {
    background-image:url("<%= asset_path 'icons/gallery_icons/gallery_next.png' %>");
    z-index: 100;
    top: 100px;
    right: 0;
    position: absolute;
    height: 128px;
    width: 128px;
}

div.prev_icon {
    z-index: 100;
    top: 100px;
    left: 0;
    position: absolute;
    height: 128px;
    width: 128px;
    background-image:url("<%= asset_path 'icons/gallery_icons/gallery_prev.png' %>");
}

div.hotel_photo_gallery {
    position: relative;
    height: auto;
}

.bottom_description {
    position: absolute;
    bottom: 0;
    background-color: black;
    opacity: 0.5;
    z-index:100;
    color: white;
    text-align: center;
}

div.gallery_description {
    height: 50px;
    width: 970px;
    font-family: Tangerine;
    font-size: 55px;
}

div.description_title {
    font-family: Tangerine;
    font-size: 60px;
    color: white;
}

div.home_description {
    font-size: 20px;
    color: white;
    width: 690px;
    float: left;
    height: 115px;
}

div.home_page_booking {
    width: 270px;
    height:115px;
    float: left;
    border-radius: 10px;
    background-color: rgba(150, 150, 144, 0.18);
    margin: 0 0 10px 10px;
}

div.booking_title {
    color: Red;
    font-size: 20px;
    padding: 13px 0 0 13px;
}

div.booking_tagline{
    color: Green;
    float: right;
    font-family: Tangerine;
    font-size: 30px;
    padding-right:4px;
}